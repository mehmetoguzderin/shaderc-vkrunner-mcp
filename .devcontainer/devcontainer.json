{
    "name": "shaderc-vkrunner-mcp",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "eamodio.gitlens",
